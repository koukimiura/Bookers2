<div class="row">
	<div class="col-xs-3">
	<%= render "layouts/lists", user: @user, book: @book_new %>

	</div>
	<div class="col-xs-9">
		<h2>Books</h2>
		<table class = "table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<!-- <th colspan="3"></th> -->
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td>
						<%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "default.jpeg", size:'40x40'%>
					</td>
					<td><%= link_to book.title, book_path(book.id) %></td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
