
<div class="row">
	<div class="col-xs-3">
	<%= render "layouts/lists", user: current_user, book: @book_new %>

	</div>
	<div class="col-xs-9">
		<h2>Users</h2>
		<table class = "table">
			<thead>
				<tr>
					<th></th>
					<th>Name</th>
					<th></th>
					<!-- <th colspan="3"></th> -->
				</tr>
			</thead>
			<tbody>
			<% @users.each do |user| %>
				<tr>
					<td>
						<%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "default.jpeg", size:'40x40'%>
					</td>
					<td><%= user.name %></td>
					<td><%= link_to "Show", user_path(user.id) %></td>
				</tr>
			<% end %>
			</tbody>
		</table>
	</div>

</div>


