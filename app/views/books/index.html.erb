
<% if@book_new.errors.any? %>
          <div class="alert alert-warning">
            <ul>
              <% @book_new.errors.full_messages.each do |message| %>
              	<% logger.debug("-----------errors=#{message}") %>
              	<h2>error</h2>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>




<div class="row">
	<div class="col-xs-3">
	<%= render "layouts/lists", user: current_user, book: @book_new %>

	</div>
	<div class="col-xs-9">
		<h2>Books</h2>
		<table class = "table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<!-- <th colspan="3"></th> -->
				</tr>
			</thead>
			<tbody>
			<% Book.all.each do |book| %>
				<tr>
					<td><%= link_to user_path(book.user_id) do %>
						<%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "default.jpeg", size:'40x40'%>
						<% end %>
					</td>
					<td><%= link_to book.title, book_path(book.id) %></td>
					<td><%= book.body %></td>
				</tr>
			<% end %>
			</tbody>
		</table>
	</div>

</div>


